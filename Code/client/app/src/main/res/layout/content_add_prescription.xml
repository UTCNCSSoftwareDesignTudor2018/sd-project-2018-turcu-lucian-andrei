<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.utcn.medpat.presentation.activity.AddPrescriptionActivity"
    tools:showIn="@layout/activity_add_prescription"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:text="Patient"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/patientSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/diseaseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:hint="Disease..."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="Medication"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/medicationSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/addMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#00000000"
        android:drawableTint="@color/colorAccent2"
        android:text="Add Medication"
        android:textColor="@color/colorAccent2"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/prescribedMedList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</LinearLayout>
