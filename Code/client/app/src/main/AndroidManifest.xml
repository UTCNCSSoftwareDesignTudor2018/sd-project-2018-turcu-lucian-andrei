<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.utcn.medpat">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.activity.AddAppointmentActivity"
            android:label="@string/title_activity_add_appointment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.activity.SendMessageActivity"
            android:label="@string/title_activity_send_message"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.activity.ViewPrescriptionActivity"
            android:label="@string/title_activity_view_prescription"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.activity.AddPrescriptionActivity"
            android:label="@string/title_activity_add_prescription"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>